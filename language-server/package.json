{
  "name": "azure-pipelines-language-server",
  "description": "Azure Pipelines language server",
  "version": "0.2.1",
  "author": "Microsoft",
  "license": "MIT",
  "contributors": [
    {
      "name": "Stephen Franceschelli",
      "email": "Stephen.Franceschelli@microsoft.com"
    },
    {
      "name": "Matt Cooper",
      "email": "vtbassmatt@gmail.com"
    },
    {
      "name": "Ruslan Semenov",
      "email": "ruslan@rsemenov.com"
    }
  ],
  "engines": {
    "node": "*"
  },
  "keywords": [
    "azure-pipelines",
    "LSP"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/azure-pipelines-language-server.git"
  },
  "dependencies": {
    "azure-pipelines-language-service": "0.2.0",
    "request-light": "0.2.3",
    "vscode-languageserver": "4.1.2",
    "vscode-languageserver-types": "3.6.1",
    "vscode-nls": "3.2.2",
    "vscode-uri": "1.0.3"
  },
  "devDependencies": {
    "@types/mocha": "5.2.5",
    "@types/node": "9.6.6",
    "coveralls": "^3.0.2",
    "mocha": "5.2.0",
    "mocha-junit-reporter": "1.18.0",
    "mocha-lcov-reporter": "1.3.0",
    "nyc": "13.0.1",
    "shx": "0.3.2",
    "source-map-support": "0.5.5",
    "ts-node": "5.0.1",
    "typescript": "2.7.2"
  },
  "scripts": {
    "build": "npm run compile && npm run preppackage && cd out/src && npm pack",
    "preppackage": "shx cp package.json out/src && shx cp CHANGELOG.md out/src && shx cp LICENSE out/src && shx cp README.md out/src",
    "compile": "tsc -p .",
    "watch": "tsc -watch -p .",
    "test": "mocha --require ts-node/register --ui tdd ./test/*.test.ts",
    "coverage": "nyc mocha --require ts-node/register --require source-map-support/register --recursive --ui tdd ./test/*.test.ts",
    "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/",
      "out"
    ],
    "all": true
  }
}
